/* pages/tickets/tickets.wxss */

.tickets {
  width: 100%;
  /* background: linear-gradient(181deg, rgba(13, 204, 255, 1) 0%, rgba(71, 96, 255, 1) 100%); */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

/* .list-header {
  height: 10%;
  width: 80%;
} */

.list-content {
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  align-items: center;
  height: 80%;
  width: 80%;
  overflow: auto;
}

.list-footer {
  width: 80%;
  height: 20%;
}

.box {
  width: 100%;
  height: 200rpx;
  background: rgba(255, 255, 255, 1);
  /* box-shadow: 0px 0px 17px 1px rgba(199, 239, 255, 0.2);
  border-radius: 6px; */
  margin: 10px 0;
  display: flex;
  border-bottom: 1px solid lightgray;
}

.left-part {
  width: 30%;
  height: 100%;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.right-part {
  width: 70%;
  height: 100%;
  display: flex;
  /* justify-content: center; */
  flex-direction: column;
  align-items: flex-start;
}

.sub-title {
  font-size: 28rpx;
  font-weight: bold;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.cloumcenter {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}

.box2 {
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
  background: rgba(41, 150, 254);
}

.detail-text {
  height: 16%;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

.text {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.enterprise-login {
  width: 80%;
  height: 90rpx;
  border-radius: 50rpx;
  padding: 2px;
  background-image: linear-gradient(0deg, rgba(13, 204, 255, 1) 0%, rgba(63, 112, 255, 1) 100%);
}

